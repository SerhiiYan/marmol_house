{
  "version": 2,
  "name": "marmolhouse",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://marmolhouse.vercel.app/$1",
      "permanent": true,
      "statusCode": 301
    }
  ]
}

