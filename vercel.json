{
  "version": 2,
  "name": "marmolhouse",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(?!api/.*|assets/.*|_next/.*|favicon.ico|sitemap.xml|robots.txt)(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://marmolhouse.vercel.app/$1",
      "permanent": true,
      "statusCode": 301
    }
  ]
}